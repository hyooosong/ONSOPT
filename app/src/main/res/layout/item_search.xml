<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_shape"
    android:layout_marginVertical="10dp"
    android:background="@drawable/shape_list">

    <TextView
        android:id="@+id/search_title"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.9"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="This is Title"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/search_url"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.9"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="#3F51B5"
        android:textSize="12sp"
        android:text="This is url"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_title"
        app:layout_constraintLeft_toLeftOf="@+id/search_title"/>

    <TextView
        android:id="@+id/search_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="This is date"
        android:textColor="#3f3f3f"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_content"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/search_content"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.9"
        android:layout_height="wrap_content"
        android:lines="3"
        android:text="Contents"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_url"
        app:layout_constraintBottom_toTopOf="@+id/search_date"
        app:layout_constraintLeft_toLeftOf="@+id/search_title"
        />


</androidx.constraintlayout.widget.ConstraintLayout>